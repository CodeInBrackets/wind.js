{
  "name": "@wind-js/actor",
  "version": "2.1.2",
  "description": "Actor model for reactive and scalable applications.",
  "main": "dist/index.js",
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "prepare": "npm run build",
    "build": "tsc",
    "format": "prettier --write \"**/*.ts\" && tslint -p tsconfig.json --fix lib/**/*.ts -t verbose",
    "lint": "tslint -p tsconfig.json",
    "test": "npm run format && npm run lint && jest test",
    "test:dev": "jest --watchAll test",
    "test:cov": "jest --coverage && cat ./coverage/lcov.info | ./node_modules/coveralls/bin/coveralls.js",
    "push": "npm run test && git push",
    "deploy:major": "npm run version --major",
    "deploy:minor": "npm run version --minor",
    "deploy:patch": "npm run version --patch",
    "deploy:push": "git push && git push --tags",
    "preversion": "npm run test"
  },
  "contributors": [
    "Kevin Mas Ruiz <masruizkevin@gmail.com>"
  ],
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^23.3.9",
    "@types/uuid": "^3.4.4",
    "coveralls": "^3.0.2",
    "jest": "^23.6.0",
    "prettier": "^1.15.2",
    "ts-jest": "^23.10.4",
    "tslint": "^5.11.0",
    "tslint-config-prettier": "^1.16.0",
    "typescript": "^3.1.6"
  },
  "dependencies": {
    "uuid": "^3.3.2"
  },
  "jest": {
    "transform": {
      "^.+\\.(t|j)sx?$": "ts-jest"
    },
    "testRegex": "/test/.+\\.(test|spec)\\.(tsx?)$",
    "moduleFileExtensions": ["ts", "tsx", "js", "jsx", "json", "node"]
  }
}
