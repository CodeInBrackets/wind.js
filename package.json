{
  "name": "tarant",
  "version": "2.7.4",
  "description": "Actor model for reactive and scalable applications.",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "homepage": "https://www.tarant.io/",
  "publishConfig": {
    "access": "public"
  },
  "keywords": [
    "actor system",
    "actor",
    "DDD",
    "actor-system",
    "frontend",
    "front end",
    "backend",
    "back end",
    "reactive",
    "asynchronous"
  ],
  "scripts": {
    "prepare": "yarn build && yarn build:cdn",
    "build": "tsc",
    "build:dev": "nodemon",
    "build:cdn": "yarn build && rollup -c",
    "build:doc": "jsdoc2md --files 'lib/**/*.ts' --configure jsdoc2md.json > API.md",
    "format": "prettier --write \"**/*.ts\" && tslint -p tsconfig.json --fix lib/**/*.ts -t verbose",
    "lint": "tslint -p tsconfig.json",
    "test": "yarn format && yarn lint && jest test",
    "test:dev": "jest --watchAll test",
    "test:cov": "yarn format && yarn lint && jest --coverage && cat ./coverage/lcov.info | ./node_modules/coveralls/bin/coveralls.js",
    "push": "yarn test && git push",
    "deploy:major": "yarn version --major",
    "deploy:minor": "yarn version --minor",
    "deploy:patch": "yarn version --patch",
    "deploy:push": "git push && git push --tags",
    "preversion": "yarn test"
  },
  "contributors": [
    "Kevin Mas Ruiz <masruizkevin@gmail.com>",
    "Kanekotic <alvarojosepl@gmail.com>"
  ],
  "repository": "git@github.com:tarantx/tarant.git",
  "license": "MIT",
  "devDependencies": {
    "@babel/cli": "7.7.7",
    "@babel/core": "7.7.7",
    "@babel/plugin-proposal-class-properties": "7.7.4",
    "@babel/plugin-proposal-object-rest-spread": "7.7.7",
    "@babel/preset-env": "7.7.7",
    "@babel/preset-typescript": "7.7.7",
    "@types/faker": "4.1.8",
    "@types/jest": "24.0.24",
    "@types/node": "12.12.21",
    "coveralls": "3.0.9",
    "faker": "4.1.0",
    "jest": "24.9.0",
    "jsdoc-babel": "0.5.0",
    "nodemon": "^2.0.2",
    "prettier": "1.19.1",
    "rollup": "1.27.13",
    "rollup-plugin-commonjs": "10.1.0",
    "rollup-plugin-node-resolve": "5.2.0",
    "rollup-plugin-terser": "5.1.3",
    "rollup-plugin-typescript2": "0.25.3",
    "ts-jest": "24.2.0",
    "tslint": "5.20.1",
    "tslint-config-prettier": "1.18.0",
    "typescript": "3.7.3"
  },
  "dependencies": {
    "jsdoc-to-markdown": "^5.0.3",
    "tslib": "1.10.0"
  },
  "jest": {
    "preset": "ts-jest"
  }
}
